         <font>
            <Font size="15.0" />
         </font>
      </Button>
      <Text fill="#ab5a9e" layoutX="30.0" layoutY="501.0" strokeType="OUTSIDE" strokeWidth="0.0" text="&gt;" textAlignment="CENTER">
